<h1><%= tmp Student %></h1>

<table class="table">
  <thead>
    <tr>
      <th><%= ta Student, :name %></th>
      <th><%= ta Student, :register_number %></th>
      <th><%= ta Student, :status %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.register_number %></td>
        <td><%= status_label student.status %></td>
        <td><%= link_to 'Editar', edit_student_path(student) %></td>
        <td><%= link_to 'Excluir', student, method: :delete, data: { confirm: 'Confirma?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo estudante', new_student_path, class: 'btn btn-default' %>
