<h1><%= tmp Course %></h1>

<table class="table">
  <thead>
    <tr>
      <th><%= ta Course, :name %></th>
      <th><%= ta Course, :description %></th>
      <th><%= ta Course, :status %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= status_label course.status %></td>
        <td><%= link_to 'Editar', edit_course_path(course) %></td>
        <td><%= link_to 'Excluir', course, method: :delete, data: { confirm: 'Confirma?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo curso', new_course_path, class: 'btn btn-default' %>
